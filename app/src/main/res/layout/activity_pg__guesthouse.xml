<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.sell.PropertyForm.forsale_HP">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/SUBTYPE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:hint="Subtype"
            android:inputType="text"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp">

            <EditText
                android:id="@+id/SUBTYPEETX_FORSALE_HP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/FURNISHING"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:hint="Furnishing*"
            android:inputType="text"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp">

            <EditText
                android:id="@+id/FURNISHINGETX_FORSALE_HP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/LISTEDBY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:hint="Listed by"
            android:inputType="text"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp">

            <EditText
                android:id="@+id/LISTEDBY_FORSALE_HP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/CARPARKING_PG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:hint="Car Parking"
            android:inputType="text"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp">

            <EditText
                android:id="@+id/CARPARKINGETX_FORSALE_HP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000" />

        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/MEALTITLE"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:text="Meals included"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/BTNNO"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/MEALTITLE"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="No" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/MEALTITLE"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_toRightOf="@id/BTNNO"
                android:text="Yes" />

        </RelativeLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ADTITLE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:hint="Add Title"
            android:inputType="number"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp">

            <EditText
                android:id="@+id/ADTITLEETX_FORSALE_HP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/DESCRIPTION"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:hint="Describe What you are Selling* "
            android:inputType="number"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp">

            <EditText
                android:id="@+id/DESCRIPTIONETX_FORSALE_HP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/BTNNEXT_FORSALE_HP"
            android:background="#B9A6DF"
            android:textColor="#000"
            android:text="NEXT"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>